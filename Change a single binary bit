#include <stdio.h>

int main()
{
	int a = 3;
	int b = 5;
	int c = 1;
	//a的补位：00000000000000000000000000000011
	//b的补位：00000000000000000000000000000101
	//c的补位：00000000000000000000000000000001
	//如果想要替换某一个二进制位，可以进行一下操作：
	b |= c << 1;
	printf("%d\n", b);  //b = 7
	//b的倒数第二个二进制位数被替换成了1
	//如果需要将1替换成0,则：
	a &= ~(c << 1);
	printf("%d\n", a);  //a = 1
	return 0;
}
